{
  "name": "board-ui",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/board-ui/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@angular-devkit/build-angular:browser",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/board-ui",
        "index": "apps/board-ui/src/index.html",
        "main": "apps/board-ui/src/main.ts",
        "polyfills": ["zone.js"],
        "tsConfig": "apps/board-ui/tsconfig.app.json",
        "inlineStyleLanguage": "scss",
        "assets": [
          "apps/board-ui/src/favicon.ico",
          "apps/board-ui/src/assets",
          "apps/board-ui/src/manifest.webmanifest"
        ],
        "styles": [
          "apps/board-ui/src/styles.scss",
          "apps/board-ui/src/theme.scss"
        ],
        "scripts": []
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "2mb",
              "maximumError": "5mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "8kb",
              "maximumError": "10kb"
            }
          ],
          "outputHashing": "all",
          "fileReplacements": [
            {
              "replace": "apps/board-ui/src/environments/environment.ts",
              "with": "apps/board-ui/src/environments/environment.prod.ts"
            }
          ]
        },
        "development": {
          "buildOptimizer": false,
          "optimization": false,
          "vendorChunk": true,
          "extractLicenses": false,
          "sourceMap": true,
          "namedChunks": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "executor": "@angular-devkit/build-angular:dev-server",
      "configurations": {
        "production": {
          "browserTarget": "board-ui:build:production"
        },
        "development": {
          "browserTarget": "board-ui:build:development"
        }
      },
      "defaultConfiguration": "development"
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "browserTarget": "board-ui:build"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/board-ui/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "e2e": {
      "executor": "@nx/cypress:cypress",
      "options": {
        "cypressConfig": "apps/board-ui/cypress.config.ts",
        "testingType": "e2e",
        "devServerTarget": "board-ui:serve"
      },
      "configurations": {
        "production": {
          "devServerTarget": "board-ui:serve:production"
        }
      }
    }
  },
  "tags": []
} 